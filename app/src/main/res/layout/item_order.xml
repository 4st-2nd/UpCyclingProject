<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/order_background"
    android:paddingVertical="10sp"
    android:layout_marginTop="20sp">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="구매완료"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:layout_marginTop="10sp"
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:src="@drawable/green_line"
        android:layout_marginHorizontal="25sp"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:tint="@color/black" />
    <ImageView
        android:id="@+id/order_image"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:src="@drawable/upcycling"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="15sp"
        app:layout_constraintLeft_toLeftOf="@id/line1"
        app:layout_constraintTop_toBottomOf="@id/line1"
        />
    <TextView
        android:id="@+id/txt_order_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="상품 이름"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="20sp"
        app:layout_constraintLeft_toRightOf="@id/order_image"
        app:layout_constraintTop_toBottomOf="@id/line1"/>
    <TextView
        android:id="@+id/txt_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="가격"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="20sp"
        app:layout_constraintLeft_toRightOf="@id/order_image"
        app:layout_constraintBottom_toBottomOf="@id/order_image"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>