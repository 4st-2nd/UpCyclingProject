<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/order_background"
    android:paddingVertical="10sp"
    android:layout_marginTop="20sp">


    <TextView
        android:id="@+id/txt_comment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="작성자"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:layout_marginTop="10sp"
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:src="@drawable/green_line"
        android:layout_marginHorizontal="25sp"
        app:layout_constraintTop_toBottomOf="@id/txt_comment_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:tint="@color/black" />
    <TextView
        android:id="@+id/txt_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="댓글"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="10sp"
        app:layout_constraintLeft_toLeftOf="@id/txt_comment_name"
        app:layout_constraintTop_toBottomOf="@id/line1"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>